@model SorveteListViewModel

<br>
<h1>@Model.CategoriaAtual</h1>
</br>
<br>
<tbody>

    <div class="container">
        <div class="row">
            @foreach (var item in Model.Sorvetes)
            {
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <p><img src="@item.ImagemUrl" style="width:280px; height: 280px;" class="img-fluid"></p>
                    <h5>Nome: @item.Nome </h5>
                    <h6>@item.DescricaoCurta</h6>
                    <h7>Preço Sugerido: R$@item.Preco</h7>
                    <p>
                </div>

            }
        </div>
    </div>
</tbody>
</table>
